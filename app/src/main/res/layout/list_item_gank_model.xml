<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.zurich.gankmaterial.widget.GankImageView
            android:id="@+id/iv_gank_model_icon"
            android:layout_width="match_parent"
            android:layout_height="188dp"
            tools:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:id="@+id/ll_gank_model_info"
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:layout_gravity="bottom"
            android:background="@color/transparent_bg"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingBottom="@dimen/list_top_margin"
            android:paddingLeft="@dimen/fab_margin"
            android:paddingRight="@dimen/fab_margin"
            android:paddingTop="@dimen/list_top_margin">

            <TextView
                android:id="@+id/tv_gank_model_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:ellipsize="end"
                android:gravity="left"
                android:maxLines="2"
                android:text="来得及付来得及付款时塑料袋放假了款时塑料馈说涉及到了反馈说"
                tools:textColor="@color/white"
                android:textSize="@dimen/text_title_normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_gank_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="zurich"
                    tools:textColor="@color/text_gray"
                    android:textSize="@dimen/text_normal" />

                <android.support.v4.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_gank_creat_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="3dp"
                    android:gravity="center_vertical"
                    android:text="2016.11.24"
                    tools:textColor="@color/text_gray"
                    android:textSize="@dimen/text_normal" />
            </LinearLayout>
        </LinearLayout>

    </FrameLayout>

    <View style="@style/ListDividerMatch" />
</LinearLayout>